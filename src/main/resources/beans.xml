<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="actor1" class="com.stackroute.domain.Actor" >
        <constructor-arg name="name" value="Abhinav" />
        <constructor-arg name="gender" value="male" />
        <constructor-arg name="age" value="20"/>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg value="Farhaan"  index="0"/>
        <constructor-arg  value="male"  index="1"/>
        <constructor-arg value="22" index="2"/>
    </bean>
    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg  value="Priyanka" type="String"/>
        <constructor-arg  value="Female" type="String" />
        <constructor-arg value="40" type="int" />
    </bean>

    <bean id="movie1" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor1" />
    </bean>

    <bean id="movie2" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor2"/>
    </bean>
    <!--<bean id="movie3" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor3"/>
    </bean>-->
    <bean name="movie3,movie4" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor3"/>
    </bean>

</beans>